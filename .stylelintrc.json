{
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-tailwindcss"
    ],
    "rules": {
      "indentation": 3,  
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen",
            "layer"
          ]
        }
      ]
    }
  }
  
  
  